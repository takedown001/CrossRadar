<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:background="@drawable/background" android:layout_height="match_parent" android:layout_width="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username"
        android:layout_width="328dp"
        android:layout_height="62dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/blankfill"
        android:fontFamily="@font/montserrat"
        android:hint="Enter Your Key"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signinbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="578px"
        android:layout_height="655px"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="262dp"
        android:layout_height="61dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/activatebtn"
        android:text="Activate"
        app:layout_constraintBottom_toTopOf="@+id/GetkeyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/GetkeyButton"
        android:layout_width="155dp"
        android:layout_height="51dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="45dp"
        android:autoLink="web"
        android:background="@drawable/getkeybtn"
        android:fontFamily="@font/montserrat"
        android:linksClickable="false"
        android:text="Get Key"
        android:textColor="@color/whiteTextColor"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/verisondisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinbtn" />

    <TextView
        android:id="@+id/verisondisplay"
        android:layout_width="66dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="21dp"

        android:text="@string/version_1_0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="In Associated With Gcc-org.com"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toEndOf="@+id/verisondisplay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

</androidx.constraintlayout.widget.ConstraintLayout>